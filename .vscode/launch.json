{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug index.ts",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ],
      "args": [
        "src/index.ts",
      ],
      "runtimeArgs": [
        "--nolazy",
        "--loader", "ts-node/esm"
      ],
      "console": "externalTerminal",
      "sourceMaps": true,
    }
  ]
}
